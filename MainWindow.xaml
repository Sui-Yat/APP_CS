<Window x:Class="WPFINPUT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFINPUT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="898" Foreground="White" OpacityMask="White" BorderBrush="White">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF1119CD" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Button Content="ClickMe" VerticalAlignment="Top" Height="42" Margin="0,100,2,0" Click="Button_Click" FontSize="36" HorizontalAlignment="Right" Width="888"/>
</Window>
